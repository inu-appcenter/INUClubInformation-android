<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/perfect"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center">

        <android.support.v4.view.ViewPager
            android:id="@+id/clubImages"
            android:layout_width="match_parent"
            android:layout_height="250dp"></android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/indicatorLayout"
            android:orientation="horizontal"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"></LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="vertical"
        android:paddingTop="22dp"
        android:paddingBottom="22dp"
        android:paddingLeft="33dp"
        android:paddingRight="33dp">

        <TextView
            android:id="@+id/clubName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="29dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="퍼펙트 Perfect!"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="1dp"
            android:paddingBottom="1dp">

            <TextView
                android:paddingLeft="1dp"
                android:id="@+id/representName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginTop="3dp"
                android:textColor="#000000"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/representNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"
                android:layout_marginTop="3dp"
                android:textColor="#000000"
                android:maxLines="1" />


        </LinearLayout>

        <TextView
            android:id="@+id/place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="13dp"
            android:textColor="#000000"
            android:text="학생회관 303호"
            android:paddingLeft="1dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:background="#eaeaea"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="33dp"
            android:layout_above="@+id/clientApplication">

            <TextView
                android:id="@+id/introduceClub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:gravity="left"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="40dp"/>
        </ScrollView>

        <FrameLayout
            android:id="@+id/clientApplication"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:foreground="?android:selectableItemBackground"
            android:background="#FDA191"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="지원하기"
                android:textSize="20dp"
                android:textColor="#ffffff"/>

        </FrameLayout>

    </RelativeLayout>
</LinearLayout>